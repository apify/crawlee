{
	"extends": "@apify/tsconfig",
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ESNext",
		"lib": ["DOM", "ES2023", "ES2024"],
		"baseUrl": ".",
		"allowJs": true,
		"skipLibCheck": true,
		"resolveJsonModule": false,
		"emitDecoratorMetadata": false
	},
	"exclude": ["**/node_modules", "**/dist"]
}
