{
	"extends": "@apify/tsconfig",
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ESNext", "DOM", "ES2020"],
		"baseUrl": ".",
		"allowJs": true,
		"skipLibCheck": true,
		"resolveJsonModule": false,
		"emitDecoratorMetadata": false,
		"module": "Node16",
		"moduleResolution": "Node16",
		"isolatedModules": true
	},
	"include": ["./packages/*/src/**/*"],
	"exclude": ["**/node_modules", "**/dist"]
}
